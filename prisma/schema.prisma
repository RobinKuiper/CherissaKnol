generator client {
  provider  = "prisma-client-js"
}

datasource db {
  provider  = "sqlite"
  url       = "file:./dev.db"
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  photos      Photo[]
}

model Photo {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int
  price       Int
  cols        Int
  rows        Int
  description String
  url         String
}